<div class="well">
<%= simple_form_for(@micropost) do |f| %>

  <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>

  <div class="form-inputs">
    <%= f.input :content, as: :text, label: false, input_html: { maxlength: 140 }, 
      placeholder: "Deixe sua mensagem (140 caracteres)" %>
  </div>

  <div class="form-actions">
    <%#= f.button :submit, "Enviar", class: 'btn btn-primary' %>

    <button type="submit" class="btn btn-primary">
      Enviar <i class="fa fa-rocket"></i> 
    </button>
  </div>
<% end %>
</div>